	<Window class="container">
		
		<ActionBar id="actionbarAddQuotFour" title="Arma tu Cotización"></ActionBar>
		
		<Menu>
			<MenuItem title="Adjuntar archivo" showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS" icon="Ti.Android.R.drawable.ic_menu_upload"></MenuItem>
