						<ListItem modelConveyor:text="Modelo 8" quantityConveyor:text="Cantidad: 2" priceConveyor:text="Precio unit: $1,111.00" totalConveyor:text="Total: $1,111.00"/>
					</ListSection>
					
		        </ListView>
				
			</ScrollView>
		</View>
		
